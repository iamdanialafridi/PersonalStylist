<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".user.UserMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@color/btn_color_orange"
            android:text="Add Measurements "
            android:textColor="@color/font_color_white"
            android:textStyle="bold"
            android:id="@+id/btnAddMeasurement"
            />
        <Button
            android:id="@+id/btnViewMeasurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:background="@color/btn_color_orange"
            android:text="View Measurements  "
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btnLogout_User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@color/btn_color_orange"
            android:text="Logout"
            android:textStyle="bold"
            android:textColor="#fff"
            />

    </LinearLayout>
</LinearLayout>